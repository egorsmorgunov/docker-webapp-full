#!/bin/bash

cp /wordpress/* /var/www/html/current/
mkdir -p /var/www/html/current/wp-admin/
mkdir -p /var/www/html/current/wp-includes/
cp -r /wordpress/wp-admin/* /var/www/html/current/wp-admin/
cp -r /wordpress/wp-includes/* /var/www/html/current/wp-includes/

if [ ! -f /var/www/html/current/wp-content/wp-config.php ]
then
  touch /var/www/html/current/wp-config.php
  ln -s /var/www/html/current/wp-config.php /var/www/html/current/wp-content/wp-config.php
  rm /var/www/html/current/wp-config.php
else
  ln -s /var/www/html/current/wp-content/wp-config.php /var/www/html/current/wp-config.php
fi

if [ ! -f /var/www/html/current/wp-content/index.php ]
  then
    cd /wp-content
    cp -r * /var/www/html/current/wp-content/
  else
    echo "File exists"
fi
